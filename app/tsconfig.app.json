{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "./src/",
    "paths": {
      "@components/*": ["./components/*"],
      "@inputs/*": ["./components/inputs/*"],
      "@mocks/*": ["./mocks/*"],
      "@features/*": ["./features/*"],
      "@pages/*": ["./pages/*"],
      "@hooks/*": ["./hooks/*"],
      "@constants": ["./constants"],
      "@state/*": ["./state/*"],
      "types/*": ["./types/*"],
      "@data/*": ["./data/*"],
      "@tests/*": ["./tests/*"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin"
      }
    ]
  },
  "include": [
    "src",
    "src/components/inputs/PasswordInputField/.PasswordInputField.tsx"
  ]
}
